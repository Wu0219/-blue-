/*在读年级*/
.menu {
  background-color: whitesmoke;
  border-radius: 40rpx;
}

.menu-po {
  position: relative;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 60%;
  margin-left: 10%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: inline-block;
}

.menu-list {
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
  height: 80rpx;
}

.menu-nav {
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-nav2 {
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-nav2 image {
  width: 24rpx;
  height: 15rpx;
}

.menu-nav text {
  font-size: 14px;
}

.menu-nav image {
  width: 54rpx;
  height: 35rpx;
}

.menu-nav text {
  color: #4AA27F;
  font-size: 14px;
  margin-top: 5rpx;
}

.shadow {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1;
  position: absolute;
  top: 210rpx;
}

.menu-if {
  background-color: #fff;
  box-sizing: border-box;
  position: absolute;
  z-index: 9;
  margin-left: -15px;
  width: 100%;
}

.swiper-item {
  background: #fff;
  width: 100%;
  height: 600rpx;
  display: none;
  position: absolute;
  top: 100rpx;
  z-index: 333333;
  left: 0;
  animation: displays 1s;
}

.meun-txt {
  height: auto;
  color: #696969;
}

.menu-text-list {
  position: relative;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.menu-text-list-left {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding-left: 35rpx;
}


.meun-city-txt {
  display: block;
  border-bottom: 1rpx solid #e9e9e9;
  width: 100%;
  padding: 25rpx 0;
  font-size: 14px;
}

.meun-city-txt-price {
  display: flex;
  justify-content: center;
}

.menu-text-list-rig {
  width: 50%;
  position: absolute;
  top: 0;
  right: 0;
  background-color: f9f9f9;
  z-index: 10;
  box-sizing: border-box;
  padding-left: 35rpx;
}

/*获取验证码*/

.codeBox {
  /* 最外层的盒子 */
  margin: 20rpx;
  display: flex;
  align-items: center;
  font-size: 12px;
}

.codeBox view:first-child {
  /* input框外层盒子的样式 */
  width: 80%;
}

.codeBox view:last-child {
  /* 按钮外层盒子的样式 */
  width: 40%;
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(0, 0, 0, 0.16);
  border: 1px solid rgb(196, 210, 236);
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #626850;
  border-top-right-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  color: white;
}

button {
  /* 按钮本身的样式 */
  background: #626850;
  width: 120rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
}

button::after {
  /* 去掉按钮点击自带的效果 */
  border: none;
}

button:hover {
  /* 去掉按钮触摸自带的效果 */
  background: none;
}

.inputcode {
  width: 80%;
  height: 80rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 8%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: whitesmoke;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}